{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "outputDirectory": "frontend/dist",
  "installCommand": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
  "buildCommand": "cd frontend && npm run build"
}