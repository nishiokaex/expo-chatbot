{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": ["backend/**"],
        "excludeFiles": [
          "backend/tests/**",
          "backend/venv/**",
          "backend/__pycache__/**",
          "backend/**/*.pyc",
          "backend/**/*.pyo",
          "backend/**/*.pyd",
          "backend/**/*.log"
        ]
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "functions": {
    "backend/**": {
      "excludeFiles": "{tests,venv,__pycache__,*.cache,.pytest_cache,node_modules}/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}